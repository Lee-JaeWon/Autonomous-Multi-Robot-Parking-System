<?xml version="1.0"?>
<launch>

    <!-- BEGIN ROBOT 1 -->
    <group ns="robot_1">
        <param name="tf_prefix" value="robot_1"/>
        <include file="$(find turtlebot3_gazebo)/launch/one_robot.launch">
            <arg name="init_pose" value="-x -1 -y 1.5 -z 0.1 -Y 0"/>
            <arg name="robot_name" value="Robot_1"/>
        </include>
    </group>

    <!-- BEGIN ROBOT 2 -->
    <group ns="robot_2">
        <param name="tf_prefix" value="robot_2"/>
        <include file="$(find turtlebot3_gazebo)/launch/one_robot.launch">
            <arg name="init_pose" value="-x 1 -y 0 -z 0.1 -Y 3.14"/>
            <arg name="robot_name" value="Robot_2"/>
        </include>
    </group>

    <!-- BEGIN ROBOT 3 -->
    <group ns="robot_3">
        <param name="tf_prefix" value="robot_3"/>
        <include file="$(find turtlebot3_gazebo)/launch/one_robot.launch">
            <arg name="init_pose" value="-x 1 -y -1.3 -z 0.1 -Y 3.14"/>
            <arg name="robot_name" value="Robot_3"/>
        </include>
    </group>

</launch>
